<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
		<record id="view_company_form_inherited" model="ir.ui.view">
            <field name="name">company.form</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="br_base.view_company_form_inherited"/>
            <field name="arch" type="xml">
					<field name="city_id" position="replace"/>
					<field name="number" position="replace"/>
					<field name="district" position="replace"/>
					<group name="certificado_digital" position="replace"/>
					<label for="rml_header1" position="attributes">
						<attribute name="invisible">1</attribute>
					</label>
					<field name="rml_header1" position="attributes">
						<attribute name="invisible">1</attribute>
					</field>
					<label for="legal_name" position="before">
						<label for="cnpj_cpf"/>
						<field name="cnpj_cpf" nolabel="1" placeholder="Cnpj / Cpf"/>
					</label>
            </field>
        </record>
		
        <record id="view_company_form" model="ir.ui.view">
            <field name="name">company.form</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
					<notebook position="attributes">
						<attribute name="invisible">1</attribute>
					</notebook>
					<field name="email" position="replace"/>
					<field name="phone" position="replace"/>
					<field name="website" position="replace"/>
					<field name="zip" position="replace"/>
					<field name="street" position="replace"/>
					<field name="state_id" position="replace"/>
					<field name="country_id" position="replace"/>
					<field name="street2" position="replace"/>
					<field name="fiscal_type" position="replace"/>
							
					<notebook position="before">
						<group colspan="4" col="4">
							<field name="email"/>
							<field name="phone"/>
							<field name="mobile"/>
							<field name="website"/>
						</group>
						<group>
							<group>
								<field name="zip"/>
								<field name="street" placeholder="Logradouro"/>
								<field name="number" placeholder="Número"/>
								<field name="street2" placeholder="Complemento"/>
								<field name="district" placeholder="Bairro"/>
							</group>
							<group >
								<field name="country_id" placeholder="País"/>
								<field name="state_id" placeholder="Estado"/>
								<field name="city_id" placeholder="Cidade"/>
							</group>
							<group>
								<field name="fiscal_type"/>
								<field name="inscr_est"/>
								<field name="cnae_main_id" widget="selection"/>
							</group>
							<group>
								<field name="inscr_mun"/>
							</group>
						</group>
					</notebook>
            </field>
        </record>
        
        
        
        
      
        
    </data>
</openerp>
