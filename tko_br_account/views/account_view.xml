<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="account_invoce_view_inherit_remove_required" model="ir.ui.view">
        <field name="name">account_invoice_line_form_view</field>
        <field name="model">account.invoice.line</field>
        <field name="inherit_id" ref="br_account.view_br_account_invoice_line_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='pis_cst']" position="after">
                <field name="is_cust_invoice" invisible="1"/>
                <field name="is_required" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='pis_cst']" position="replace">
                <field name="pis_cst" attrs="{'required':[('is_required','=',False),('is_cust_invoice','=',True)]}"/>
            </xpath>
            <xpath expr="//field[@name='cofins_cst']" position="replace">
                <field name="cofins_cst" attrs="{'required':[('is_required','=',False),('is_cust_invoice','=',True)]}"/>
            </xpath>
            <xpath expr="//field[@name='ipi_cst']" position="replace">
                <field name="ipi_cst" attrs="{'required':[('is_required','=',False),('product_type','=', 'product'),('is_cust_invoice','=',True)]}"/>
            </xpath>
            <xpath expr="//field[@name='service_type_id']" position="replace">
                <field name="service_type_id" attrs="{'required':[('is_cust_invoice','=',True),('product_type','=', 'service')]}"  domain="[('internal_type','=','normal')]"/>
            </xpath>
        </field>
    </record>
</odoo>
