<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="br_account_product_template_form_view" model="ir.ui.view">
        <field name="name">br_account_product_template_form_view</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="br_account.br_account_product_template_form_view"/>
        <field name="arch" type="xml">
            <field name="service_type_id" position="replace">
                <field name="service_type_id"
                       attrs="{'required': [('sale_ok','=',True)], 'invisible': [('fiscal_type', '=', 'product')]}"
                       domain="[('internal_type', '=', 'normal')]"/>
            </field>
        </field>
    </record>

</odoo>
