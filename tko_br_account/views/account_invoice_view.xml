<openerp>
    <data>
        <record model="ir.ui.view" id="view_br_account_invoice_line_form">
            <field name="name">br_account.invoice.line.form</field>
            <field name="model">account.invoice.line</field>
            <field name="inherit_id" ref="br_account.view_br_account_invoice_line_form"/>
            <field name="arch" type="xml">
                <page name="irpj" position="attributes">
                    <attribute name="attrs">{}</attribute>
                </page>
                <page name="icms" position="attributes">
                    <attribute name="attrs">{}</attribute>
                </page>
                <page name="csll" position="attributes">
                    <attribute name="attrs">{}</attribute>
                </page>
                <field name="icms_valor" position="after">
                    <field name="icms_valor_retencao"/>
                </field>
                <field name="icms_st_valor" position="after">
                    <field name="icms_st_valor_retencao"/>
                </field>
                <field name="ipi_valor" position="after">
                    <field name="ipi_valor_retencao"/>
                </field>
                <field name="pis_valor" position="after">
                    <field name="pis_valor_retencao"/>
                </field>
                <field name="cofins_valor" position="after">
                    <field name="cofins_valor_retencao"/>
                </field>
                <field name="issqn_valor" position="after">
                    <field name="issqn_valor_retencao"/>
                </field>
                <field name="csll_valor" position="after">
                    <field name="csll_valor_retencao"/>
                </field>
                <field name="irrf_valor" position="after">
                    <field name="irrf_valor_retencao"/>
                </field>
                <field name="inss_valor" position="after">
                    <field name="inss_valor_retencao"/>
                </field>
                <field name="irpj_valor" position="after">
                    <field name="irpj_valor_retencao"/>
                </field>
                <field name="ii_valor" position="after">
                    <field name="ii_valor_retencao"/>
                </field>
                <field name="product_id" position="after">
                    <field name="invoice_type" invisible="1"/>
                </field>
                <field name="tax_icms_id" position="attributes">
                    <attribute name="domain">[('type_tax_use','in',[invoice_type, 'none']),('domain', '=', 'icms')]</attribute>
                </field>
                <field name="tax_icms_st_id" position="attributes">
                    <attribute name="domain">[('type_tax_use','in',[invoice_type, 'none']),('domain', '=', 'icmsst')]</attribute>
                </field>
                <field name="tax_issqn_id" position="attributes">
                    <attribute name="domain">[('type_tax_use','in',[invoice_type, 'none']),('domain', '=', 'issqn')]</attribute>
                </field>
                <field name="tax_csll_id" position="attributes">
                    <attribute name="domain">[('type_tax_use','in',[invoice_type, 'none']),('domain', '=', 'csll')]</attribute>
                </field>
                <field name="tax_irpj_id" position="attributes">
                    <attribute name="domain">[('type_tax_use','in',[invoice_type, 'none']),('domain', '=', 'irpj')]</attribute>
                </field>
                <field name="tax_ipi_id" position="attributes">
                    <attribute name="domain">[('type_tax_use','in',[invoice_type, 'none']),('domain', '=', 'ipi')]</attribute>
                </field>
                <field name="tax_pis_id" position="attributes">
                    <attribute name="domain">[('type_tax_use','in',[invoice_type, 'none']),('domain', '=', 'pis')]</attribute>
                </field>
                <field name="tax_cofins_id" position="attributes">
                    <attribute name="domain">[('type_tax_use','in',[invoice_type, 'none']),('domain', '=', 'cofins')]</attribute>
                </field>
                <field name="tax_ii_id" position="attributes">
                    <attribute name="domain">[('type_tax_use','in',[invoice_type, 'none']),('domain', '=', 'ii')]</attribute>
                </field>
                <field name="tax_irrf_id" position="attributes">
                    <attribute name="domain">[('type_tax_use','in',[invoice_type, 'none']),('domain', '=', 'iirf')]</attribute>
                </field>
                <field name="tax_inss_id" position="attributes">
                    <attribute name="domain">[('type_tax_use','in',[invoice_type, 'none']),('domain', '=', 'inss')]</attribute>
                </field>
                <!-- Remove 1st group CSLL, it is duplicated has a separate tab-->
                <xpath expr="//page[@name='retencoes']/group/group" position="replace"/>
            </field>
        </record>


        <record id="view_br_account_invoice_form_inherit" model="ir.ui.view">
            <field name="name">l10n_br_account.invoice.inherited</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="br_account.view_br_account_invoice_form"/>
            <field name="arch" type="xml">
                <field name="total_bruto" position="replace">
                    <field name="amount_untaxed" string="Total linhas da fatura "/>
                </field>
                <field name="total_tax" position="replace"/>
                <field name="payment_mode_id" position="attributes">
                    <attribute name="domain">[('company_id','=',company_id)]</attribute>
                </field>
            </field>
        </record>

        <record id="view_l10n_br_account_invoice_form_inherited" model="ir.ui.view">
            <field name="name">l10n_br_account.invoice.inherited</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                <field name="fiscal_position_id" position="after">
                    <field name="numero_nfse"/>
                </field>
                <field name="tax_line_ids" position="before">
                    <separator string="Taxes"/>
                </field>

                <field name="amount_total" position="attributes">
                    <attribute name="string">Total Bruto ( = )</attribute>
                </field>
                <field name="amount_total" position="after">
                    <field name="amount_tax_withholding" widget="monetary" options="{'currency_field': 'currency_id'}"
                           attrs="{'invisible': [('type','!=','out_invoice')]}"/>
                    <field name="amount_total_liquid" class="oe_subtotal_footer_separator"/>
                    <field name="amount_tax" string="Impostos não retidos ( = )"/>


                </field>
                <xpath expr="//field[@name='tax_line_ids']//field[@name='account_analytic_id']" position="attributes">
                    <attribute name="invisible">0</attribute>
                </xpath>
                <xpath expr="//field[@name='tax_line_ids']//field[@name='tax_id']" position="attributes">
                    <attribute name="invisible">0</attribute>
                </xpath>
                <xpath expr="//field[@name='tax_line_ids']//field[@name='amount']" position="attributes">
                    <attribute name="sum">amount</attribute>
                </xpath>
                <field name="tax_line_ids" position="after">
                    <separator string="Withholdings"/>
                    <field name="withholding_tax_lines" options="{'no_create': True}"
                           attrs="{'readonly':[('state','not in', 'draft')], 'invisible': [('type','!=','out_invoice')]}">
                        <tree editable="bottom" string="Withholding Taxes" delete="false">
                            <field name="name"/>
                            <field name="tax_id"/>
                            <field name="account_id" groups="account.group_account_user"/>
                            <field name="base" readonly="1"/>
                            <field name="amount" sum="amount"/>
                            <field invisible="True" name="base_amount"/>
                            <field invisible="True" name="tax_amount"/>
                        </tree>
                    </field>
                </field>
            </field>
        </record>




        <!--Supplier Inovice-->
        <record id="view_l10n_br_account_supplier_invoice_form_inherited" model="ir.ui.view">
            <field name="name">l10n_br_account.invoice.inherited</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_supplier_form"/>
            <field name="arch" type="xml">
                <field name="tax_line_ids" position="before">
                    <separator string="Taxes"/>
                </field>

                <field name="amount_total" position="attributes">
                    <attribute name="string">Total Bruto ( = )</attribute>
                </field>
                <field name="amount_total" position="after">
                    <field name="amount_tax_withholding" widget="monetary" options="{'currency_field': 'currency_id'}"
                           attrs="{'invisible': [('type','!=','out_invoice')]}"/>
                    <field name="amount_total_liquid" class="oe_subtotal_footer_separator"/>
                    <field name="amount_tax" string="Impostos não retidos ( = )"/>
                </field>

                <xpath expr="//field[@name='tax_line_ids']//field[@name='amount']" position="attributes">
                    <attribute name="sum">amount</attribute>
                </xpath>
            </field>
        </record>

        <record id="view_br_account_invoice_supplier_form" model="ir.ui.view">
            <field name="name">l10n_br_account.invoice.inherited</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="br_account.view_br_account_invoice_supplier_form"/>
            <field name="arch" type="xml">
                <field name="total_bruto" position="replace">
                    <field name="amount_untaxed" string="Total linhas da fatura "/>
                </field>
                <field name="total_tax" position="replace"/>
            </field>
        </record>
    </data>
</openerp>